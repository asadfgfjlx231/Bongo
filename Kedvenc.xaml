<UserControl x:Class="Bongo.Kedvenc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Bongo"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="700">
    <Grid Background="DarkGray">
        <TextBox x:Name="urlHelye" Width="510" Height="40" HorizontalAlignment="Left"
                   Margin="5" IsReadOnly="True" VerticalContentAlignment="Center"
                 Background="Black" Foreground="White" FontSize="20" FontWeight="DemiBold"
                 Padding="5">
            https://www.facebook.com/
        </TextBox>
        <Button x:Name="kuka" Width="40" Height="40" Background="DarkRed" Foreground="White" FontSize="20"
                FontWeight="DemiBold" HorizontalAlignment="Right" Margin="5" Click="kuka_Click">
            🗑️
        </Button>

        <Button x:Name="megnyitas" Width="130" Height="40" Background="DarkGreen" Foreground="White" FontSize="20"
        FontWeight="DemiBold" HorizontalAlignment="Right" Margin="50, 0" Click="megnyitas_Click">
            Megnyitás ▶
        </Button>
    </Grid>
</UserControl>
