<Window x:Class="Bongo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bongo"
        mc:Ignorable="d"
        xmlns:cefSharp="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
        Title="Mini Chromium Browser" Height="600" Width="900"
        Background="#1e1e1e" Foreground="White">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Felső eszköztár -->
        <DockPanel Grid.Row="0" LastChildFill="True">
            <Button Content="⟨" Width="35" Click="Back_Click"/>
            <Button Content="⟩" Width="35" Click="Forward_Click"/>
            <Button Content="⟳" Width="35" Click="Reload_Click"/>
            <Button Content="✖" Width="35" Click="Stop_Click"/>

            <TextBox x:Name="AddressBar"
                     DockPanel.Dock="Right"
                     FontSize="14"
                     Margin="5,0,0,0"
                     Padding="5"
                     VerticalContentAlignment="Center"
                     KeyDown="AddressBar_KeyDown"
                     Background="#2d2d2d"
                     Foreground="White"
                     BorderBrush="#444"
                     BorderThickness="1"/>
            <Button Content="🔍"
                    Width="40"
                    Click="Go_Click"
                    Margin="5,0,0,0"/>
        </DockPanel>

        <!-- Chromium böngésző -->
        <cefSharp:ChromiumWebBrowser x:Name="Browser"
                                     Grid.Row="2"
                                     Address="https://www.google.com"/>

        <local:TabContent Grid.Row="1" x:Name="DefaultBrowser" Url="https://www.ebay.com"></local:TabContent>
    </Grid>
</Window>
